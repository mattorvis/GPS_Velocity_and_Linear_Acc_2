<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/velocity_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:text="GPS Velocity: 0.00 m/s"/>

    <TextView
        android:id="@+id/location_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:text="GPS Position: 0.00 m/s"/>

    <TextView
        android:id="@+id/linear_acceleration_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:text="Acceleration: 0.00 m/s"/>

    <TextView
        android:id="@+id/linear_acceleration_mag_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:text="Total Acceleration: 0.00 m/s"/>

    <TextView
        android:id="@+id/accelerometer_velocity_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:text="Velocity: 0.00 m/s"/>

</LinearLayout>